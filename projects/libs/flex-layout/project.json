{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "@ngbracket/ngx-layout",
  "projectType": "library",
  "sourceRoot": "projects/libs/flex-layout",
  "prefix": "fx",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/releases/ngx-layout"],
      "options": {
        "project": "projects/libs/flex-layout/ng-package.json"

      },
      "configurations": {
        "production": {
          "tsConfig": "projects/libs/flex-layout/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/libs/flex-layout/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../coverage/projects/libs/flex-layout"
      },
      "configurations": {
        "ssr": {
          "config": "projects/libs/flex-layout/vite.config.ssr.mts",
          "reportsDirectory": "../../../coverage/ssr/projects/libs/flex-layout"
        }
      }
    }
  }
}
